{
  "extends": "airbnb-base",
  "env": {
    "mocha": true
    },
  "rules": {
      "brace-style" : [2, "stroustrup", {"allowSingleLine" : true}],
      "indent": ["error", 2, { "SwitchCase": 0 }],
      "class-methods-use-this": 0,
      "comma-dangle": 0,
      "max-len": 0,
      "no-console": 0,
      "no-param-reassign": 0,
      "no-shadow": 0,
      "no-use-before-define": 0,
      "padded-blocks": 0,
      "strict": 0
  }
}
